generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("user")
}

model WebSettings {
  id            Int      @id @default(1)
  companyName   String
  whatsappSales String
  footerText    String
  socialMedia   Json
  menuItems     Json
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("web_settings")
}
